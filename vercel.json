{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/dashboard.html",
            "dest": "api/index.py"
        },
        {
            "src": "/about.html",
            "dest": "api/index.py"
        },
        {
            "src": "/css/(.*)",
            "dest": "frontend/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "frontend/js/$1"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ]
}